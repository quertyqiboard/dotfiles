bindsym $mod+r mode "resize"
mode "resize" {
# Resize windows with vim keybindings
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
        bindsym $mod+q mode "default"
}

bindsym $mod+p mode "music"
mode "music" {
# Control volume / music
        bindsym h exec playerctl previous
        bindsym j exec amixer set Master 5%-
        bindsym k exec amixer set Master 5%+
        bindsym l exec playerctl next
	bindsym u exec amixer set Master toggle
	bindsym i exec playerctl play-pause
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+p mode "default"
        bindsym $mod+q mode "default"
}

bindsym $mod+b mode "brightness"
mode "brightness" {
# Brightness control
	bindsym j exec xbacklight -dec 2 -time 10 -steps 5
	bindsym h exec xbacklight -dec 2 -time 10 -steps 5
	bindsym k exec xbacklight -inc 2 -time 10 -steps 5
	bindsym l exec xbacklight -inc 2 -time 10 -steps 5
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+p mode "default"
        bindsym $mod+q mode "default"

}
