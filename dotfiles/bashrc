# Makes my bash name look nice
 if [ "$EUID" -ne 0 ]
 then export PS1="\[$(tput bold)\]\[$(tput setaf 6)\][\[$(tput setaf 3)\]\u\[$(tput setaf 6)\]@\[$(tput setaf 6)\]\h\[$(tput setaf 6)\]] \[$(tput setaf 1)\]\w\[$(tput sgr0)\] \[$(tput setaf 6)\]\$ \[$(tput sgr0)\]"
	 else export PS1="\[$(tput bold)\][ROOT] \W\[$(tput sgr0)\] # "
 fi

