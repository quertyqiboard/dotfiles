[colors]
background = #88000000
background-alt = #99000000
foreground = ${xrdb:color7}
foreground-alt = #555
primary = ${xrdb:color3}
secondary = ${xrdb:color5}
alert = ${xrdb:color1}
col = #00f

[bar/default]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 25
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 2
line-size = 5
line-color = {$xrdb:color1}
border-size = 0
border-color = ${colors.background}
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = DejaVu Sans Mono:size=11;2
font-1 = FontAwesome:size=11;2
font-2 = DevaVu Sans:size=12;2
font-3 = MaterialIcons:size=11;4
modules-left = i3
modules-center = spotify
modules-right = wlan eth battery cpu temperature date powermenu
tray-position = right
tray-transparent = true
tray-background = #99000000
wm-restack = i3
override-redirect = true
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev



[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline= ${xrdb:color6}
label-focused-padding = 2
label-occupied = %index%
label-occupied-padding = 1
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-underline = ${colors.alert}
label-urgent-padding = 1
label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1



[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-mode-padding = 0
label-mode-foreground = #000
label-mode-background = ${colors.primary}
label-focused = %index%
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}
label-unfocused = %index%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}
label-visible = %index%
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
label-urgent = %index%
label-urgent-underline = ${colors.alert}
label-urgent-padding = ${module/bspwm.label-urgent-padding}






[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <label>
format-warn = <label-warn>
label =  %temperature-c%
label-warn =  %temperature-c%
label-warn-foreground = ${colors.secondary}
label-active-font = 1



