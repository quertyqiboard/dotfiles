[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0
format-connected = <label-connected>
label-connected =  %essid%
format-disconnected = <label-disconnected>
label-disconnected =  No Wlan
label-disconnected-foreground = ${colors.foreground}



[module/eth]
type = internal/network
interface = enp2s0
interval = 5.0

format-connected-prefix-foreground = ${colors.foreground}
label-connected =  %local_ip%

;format-disconnected =
format-disconnected = <label-disconnected>
label-disconnected =  No LAN
label-disconnected-foreground = ${colors.foreground}



[module/date]
type = internal/date
interval = 1
date =  %%{F#eee}%d-%m-%Y%%{F-}   %%{F#fff}%H:%M%%{F#fff}:%S%%{F#fff}

label = %date% %time%






[module/battery]
type = internal/battery
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-full-prefix-foreground = ${colors.foreground}
format-foregound = ${colors.foreground}


ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 350



[module/powermenu]
type = custom/menu

format-spacing = 0

label-open = 
label-close = cancel
label-separator = |

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = sure?
menu-1-0-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff



[module/spotify]
type = custom/script
interval = 0.5
format = <label>
label-font = 3
label-active-font = 3
label-maxlen = 72
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-foreground = ${colors.foreground}
exec = ~/.config/polybar/spotify
exec-if = pgrep -f "Spotify"

[module/schedule]
type = custom/script
interval = 300
format = <label>
label-font = 2
label-active-font = 2
label-maxlen = 20
format-foreground = ${colors.foreground}
format-prefix = " Morgen: "
exec = python3.7 ~/.i3/schedule.py

