[colors]
background = #00000000
foreground = #ffffffff
primary = #ffb58900
secondary = #ffd33682
alert = #ffdc322f
col = #00f

[bar/default]
monitor = ${env:MONITOR:eDP1}
width = 99%
offset-x = 10
offset-y = 5
height = 25
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 2
line-size = 5
line-color = #ffdc322f
; border-size = 1
; border-color = #ffffffff
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 2
radius = 5
font-0 = DejaVu Sans Mono:size=12;2
font-1 = FontAwesome:size=12;3
font-2 = DevaVu Sans:size=13;2
font-3 = MaterialIcons:size=12;4
font-4 = FontAwesome:size=46;0
modules-left = i3
modules-center = spotify
modules-right = schedule wlan eth battery cpu temperature date
tray-position = right
tray-background = #00000000
wm-restack = i3
override-redirect = true
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev





[module/i3]
type = internal/i3
format = <label-state> <label-mode>
label-active-font = 5
label-visible-padding = 1
label-focused = %name%
label-focused-underline = #fffdf6e3
label-focused-padding = 1
label-unfocused = %name%
label-unfocused-padding = 1
label-urgent-underline = ${colors.alert}



[module/temperature]
type = internal/temperature
label-active-font = 1
warn-temperature = 60
format = <label>
label = %temperature-c%
format-warn = <label-warn>
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}



[module/cpu]
type = internal/cpu
