; vim:ft=dosini
[colors]
background = #262626
foreground = #ffffff
yellowish = #D7FF87
yellow = #FFFF33
red = #FF3333
green = #33FF33
gray = #A4A4A4
lightgreen = #aaff77
lightorange = #fba922

[bar/default]
monitor = ${env:MONITOR:eDP1}
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 3
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = DejaVu Sans Mono:size=14;2
modules-left = i3 spotify info-weather
modules-center = time
modules-right = info-hackspeed cpu wlan eth battery temperature date
tray-position = right
wm-restack = i3
override-redirect = true
[module/info-weather]
type = custom/script
exec = /home/henning/scripts/info-weather.sh 2&> /dev/null
interval = 600
label = %output%
label-foreground = ${colors.gray}
[module/pacman-updates]
type = custom/script
exec = checkupdates | wc -l
exec-if = ping ddg.gg -c 3
interval = 600
label = Pacman: %output%
label-foreground = ${colors.gray}
[module/filesystem]
type = internal/fs
mount-0 = /
interval = 10
label-mounted = /: %percentage_used%% [%used% / %total%]
format-mounted-foreground = ${colors.yellowish}
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
label-focused-padding = 1
label-focused = %index%
label-focused-foreground = ${colors.yellowish}
label-focused-underline = ${colors.yellowish}
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.gray}
label-urgent-underline = ${colors.red}
label-mode-foreground = ${colors.red}
[module/temperature]
type = internal/temperature
warn-temperature = 40
label = %temperature-c%
label-foreground = ${colors.green}
label-warn = %temperature-c%
label-warn-foreground = ${colors.red}
[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5
format-connected = <label-connected>
label-connected = Wlan
label-connected-foreground = ${colors.green}
format-disconnected = <label-disconnected>
label-disconnected = Wlan
label-disconnected-foreground = ${colors.red}
[module/eth]
type = internal/network
interface = enp2s0
interval = 2.0
label-connected = Eth %downspeed%
label-disconnected = Eth
label-disconnected-foreground = ${colors.red}
label-connected-foreground = ${colors.green}
[module/date]
type = internal/date
interval = 60
date = %d.%m.%Y (Wk %W)
label-foreground = ${colors.yellowish}
[module/time]
type = internal/date
interval = 60
date = %a %H:%M%
label-foreground = ${colors.yellowish}
[module/battery]
type = internal/battery
full-at = 98
label-charging = Charging (%percentage%%)
label-discharging = %percentage%%
label-full = %percentage%%
label-discharging-foreground = ${colors.yellowish}
label-charging-foreground = ${colors.green}
label-full-foreground = ${colors.yellowish}
[module/spotify]
type = custom/script
interval = 2
label-maxlen = 72
format-foreground = ${colors.green}
exec = ~/.config/polybar/spotify 2>/dev/null
exec-if = pgrep spotify
[module/info-hackspeed]
type = custom/script
exec = ~/scripts/info-hackspeed.sh
interval = 2
tail = true
format-foreground = ${colors.yellowish}
[module/schedule]
type = custom/script
interval = 300
label-maxlen = 24
format-foreground = ${colors.green}
format-prefix = "Morgen: "
exec = python3.7 ~/scripts/schedule.py
[bar/bottom]
monitor = ${env:MONITOR:eDP1}
height = 25
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 5
padding-right = 5
module-margin-right = 5
bottom = true
font-0 = DejaVu Sans Mono:size=14;2
modules-left = volume xbacklight
modules-center = schedule pacman-updates
modules-right = filesystem memory
wm-restack = i3
override-redirect = true
[module/xbacklight]
type = internal/xbacklight
format = <label> <bar>
label = BL
bar-width = 20
bar-indicator = |
bar-fill = =
bar-empty = =
bar-empty-foreground = #999
[module/volume]
type = internal/alsa
format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-muted = muted
bar-volume-width = 20
bar-volume-foreground-0 = ${colors.lightgreen}
bar-volume-foreground-1 = ${colors.yellow}
bar-volume-foreground-2 = ${colors.lightorange}
bar-volume-foreground-3 = ${colors.red}
bar-volume-indicator = |
bar-volume-fill = =
bar-volume-empty = =
bar-volume-empty-foreground = #999
[module/memory]
type = internal/memory
interval = 5
label = RAM: %percentage_used%% [%gb_used% / %gb_total%]
format-foreground = ${colors.yellowish}
[module/cpu]
type = internal/cpu
label = CPU: %percentage:2%%
label-foreground = ${colors.yellowish}
[settings]
screenchange-reload = true
compositing-background = xor
compositing-foreground = source
[global/wm]
margin-top = 5
margin-bottom = 5
